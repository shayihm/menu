<% if flash[:notice] %>
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<%= flash[:notice] %>
	</div>

<!-- Error --> 
<% elsif flash[:error] %>
	<div class="alert alert-danger">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<%= flash[:error] %>
	</div>

<!-- Alert --> 
<% elsif flash[:alert] %>
	<div class="alert">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<%= flash[:alert] %>
	</div>
	
<% end %>